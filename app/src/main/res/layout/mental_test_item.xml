<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataModel"
            type="com.elfarsisy.lovetypetest.model.MentalQuestion" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:layout_marginBottom="@dimen/margin_small">


        <ImageView
            android:id="@+id/question_imageView"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="@dimen/padding_small"
            ads:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/q1" />

        <RadioButton
            android:id="@+id/answer1_radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_marginTop="@dimen/margin_mid"
            android:buttonTint="@color/colorBorderRadioBtn"
            android:checked="false"
            android:enabled="true"
            android:padding="@dimen/padding_small"
            app:layout_constraintBottom_toTopOf="@+id/answer3radioBtn"
            app:layout_constraintEnd_toStartOf="@+id/answer2_radioBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_imageView"
            tools:drawableEnd="@drawable/c1" />

        <RadioButton
            android:id="@+id/answer2_radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mid"
            android:layout_marginEnd="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid"
            android:buttonTint="@color/colorBorderRadioBtn"
            android:checked="false"
            android:enabled="true"
            android:padding="@dimen/padding_small"
            app:layout_constraintBottom_toTopOf="@+id/answer4radioBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/answer1_radioBtn"
            app:layout_constraintTop_toBottomOf="@+id/question_imageView"
            tools:drawableEnd="@drawable/iqtest_01_02" />

        <RadioButton
            android:id="@+id/answer3radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_marginTop="@dimen/margin_mid"
            android:buttonTint="@color/colorBorderRadioBtn"
            android:checked="false"
            android:enabled="true"
            android:padding="@dimen/padding_small"
            app:layout_constraintEnd_toStartOf="@+id/answer4radioBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer1_radioBtn"
            tools:drawableEnd="@drawable/iqtest_01_03" />

        <RadioButton
            android:id="@+id/answer4radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mid"
            android:layout_marginEnd="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid"
            android:buttonTint="@color/colorBorderRadioBtn"
            android:checked="false"
            android:enabled="true"
            android:padding="@dimen/padding_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/answer3radioBtn"
            app:layout_constraintTop_toBottomOf="@+id/answer2_radioBtn"
            tools:drawableEnd="@drawable/iqtest_01_04" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
