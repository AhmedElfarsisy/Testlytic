<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="fullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:noHistory">true</item>
        <item name="windowActionBar">false</item>
        <item name="font">@font/sequel_sans_light_disp</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:noHistory">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@drawable/ic_splash_screen</item>
    </style>

    <style name="radio_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radio_btn_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="buttonTint">@color/colorBorderRadioBtn</item>
        <item name="android:enabled">true</item>
        <item name="android:checked">false</item>
    </style>

    <style name="quick_start_txt_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_mid</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_mid</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/big_title_size</item>
    </style>

    <style name="next_quick_question_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_mid</item>
        <item name="android:background">@drawable/ic_next</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="counter_mental_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/mental_test_counter</item>
        <item name="android:textColor">@color/colorBlueDark</item>
    </style>
</resources>
